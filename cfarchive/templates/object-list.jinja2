{% extends "layout.jinja2" %}

{% block title %}
upload
{% endblock title %}

{% block content %}
<h1>Objects</h1>

<table class="table table-striped table-bordered table-hover table-condensed">
<thead>
  <th>object</th>
  <th>tags</th>
  <th>actions</th>
</thead>
<tbody>
{% for object_ in objects %}
  <tr>
    <td>
      <a href="{{request.route_url('retrieve_object', id_=object_.id_)}}"
         title="{{object_.id_}}">
        {{object_}}</a>
    </td>
    <td>
      <ul>
        {% for tag in object_.tags %}
          <li>{{tag}}</li>
        {% endfor %}
      </ul>
    </td>
    <td>
      <ul>
        <li>delete</li>
      </ul>
    </td>
  </tr>
{% endfor %}
</tbody>
</table>
{% endblock content %}
